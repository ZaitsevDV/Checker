        </Grid>
        <TextBox x:Name="LoginTextBox" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Margin="89,22,0,0" Text="zdv3223666@gmail.com"/>
        <TextBox x:Name="PaswordTextBox" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Margin="89,55,0,0" Text="mogilev_01"/>
    </Grid>
</Window>
